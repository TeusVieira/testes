create table Jogador(nome varchar(15), grupos varchar(25), 
                     amigos int, creditos int, primary key(nome));

create table Ranque(nome_jogador varchar(15), temporada int, ranq_sup varchar(15),
                    ranq_dano varchar(15), ranq_tank varchar(15),
                    foreign key(nome_jogador) references Jogador(nome)
                    on delete cascade on update cascade);
                     
create table Partida(nome_mapa varchar(30), tempo int, ponto_vida int,
                     objetivo varchar(30));
                      
create table Cosmetico(nome_cosmetico varchar(20), pre√ßo int, 
                       categoria varchar(15), raridade varchar(15),
                       primary key(nome_cosmetico));  
                        
create table Herois(id_heroi varchar(30), classe varchar(25),
                    saude int, escudo int, primary key(id_heroi));
                    
create table Habilidade(nome_heroi varchar(30), nome_habilidade varchar(40),
                        dano int, cura int, defesa int, tempo_recarga int,
                        primary key(nome_habilidade), foreign key(nome_heroi) references Herois(id_heroi) 
                        on delete cascade on update cascade);
                        
create table Inventario(id_inventario varchar(35), tipo_itens varchar(15), nome_itens varchar(25),
                        nome_usuario varchar(15), primary key(id_inventario), 
                        foreign key(nome_usuario) references Jogador(nome)
                        on delete cascade on update cascade, foreign key(nome_itens) references 
                        Cosmetico(nome_cosmetico) on delete cascade on update cascade);
